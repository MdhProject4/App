<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ProjectFlightApp.Pages.SearchPage"
	Title="Search">
    <ContentPage.Content>
        <StackLayout
	        Margin="32"
	        VerticalOptions="Center">

	        <Label
		        Text="Search Query"/>

			<Entry
				x:Name="EntrySearch"
				Placeholder="Search for flight ID or something..."/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>